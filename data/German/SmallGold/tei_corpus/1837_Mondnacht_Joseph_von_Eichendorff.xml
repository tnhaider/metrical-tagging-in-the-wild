      <div n="1">
        <lg type="poem">
          <head>Mondnacht</head>
          <lg rhyme="abab" type="stanza">
            <l met="-+|-+|-+|-" rhythm="02|01020|" enj_k="3">Es war, als hätt' der Himmel</l>
            <l met="-+|-+|-+|" rhythm="020102" enj_k="4">Die Erde still geküßt,</l>
            <l met="-+|-+|-+|-" rhythm="0002010|" enj_k="3">Daß sie im Blütenschimmer</l>
            <l met="-+|-+|-+|" rhythm="000201|" enj_k="5">Von ihm nun träumen müßt'.</l>
          </lg>
          <lg rhyme="abab" type="stanza">
            <l met="-+|-+|-+|-" rhythm="0200020|" enj_k="4">Die Luft ging durch die Felder,</l>
            <l met="-+|-+|-+|" rhythm="020102|" enj_k="5">Die Ähren wogten sacht,</l>
            <l met="-+|-+|-+|-" rhythm="0201020|" enj_k="4">Es rauschten leis die Wälder,</l>
            <l met="-+|-+|-+|" rhythm="020002|" enj_k="5">So sternklar war die Nacht.</l>
          </lg>
          <lg rhyme="abab" type="stanza">
            <l met="-+|-+|-+|-" rhythm="0001020" enj_k="3">Und meine Seele spannte</l>
            <l met="-+|-+|-+|" rhythm="100201|" enj_k="4">Weit ihre Flügel aus,</l>
            <l met="-+|-+|-+|-" rhythm="2001020" enj_k="4">Flog durch die stillen Lande,</l>
            <l met="-+|-+|-+|" rhythm="020002|" enj_k="5">Als flöge sie nach Haus.</l>
          </lg>
        </lg>
      </div>
    </body>
