      <div n="1">
        <lg type="poem">
          <head>Sturmangriff</head>
          <lg rhyme="abcdefghii" type="stanza">
            <l met="-+|-+|-+|-+|-+|-" rhythm="00020102010|" enj_k="3" enj="3">Aus allen Winkeln gellen Fürchte Wollen</l>
            <l met="+" rhythm="2|" enj_k="2" enj="3">Kreisch</l>
            <l met="-" rhythm="2" enj_k="3" enj="3">Peitscht</l>
            <l met="-+|-" rhythm="020" enj_k="3" enj="3">Das Leben</l>
            <l met="-" rhythm="1"  enj_k="2" enj="3">Vor</l>
            <l met="-" rhythm="1"  enj_k="2" enj="3">Sich</l>
            <l met="+" rhythm="1|"  enj_k="2" enj="3">Her</l>
            <l met="-+|-+|" rhythm="0102|"  enj_k="3" enj="3">Den keuchen Tod</l>
            <l met="-+|-+|-" rhythm="01020|" enj_k="5" enj="5">Die Himmel fetzen.</l>
            <l met="+-|+-|+-|+-|+-|" rhythm="1020100020|" enj_k="5" enj="5">Blinde schlächtert wildum das Entsetzen.</l>
          </lg>
        </lg>
      </div>
