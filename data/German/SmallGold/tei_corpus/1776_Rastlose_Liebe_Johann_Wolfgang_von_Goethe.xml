      <div n="1">
        <lg type="poem">
          <head>Rastlose Liebe</head>
          <lg rhyme="aabbcc" type="stanza">
            <l met="-+|-+-|" rhythm="02|020|" enj_k="3">Dem Schnee, dem Regen,</l>
            <l met="-+|-+-|" rhythm="01020|" enj_k="5">dem Wind entgegen,</l>
            <l met="-+|-+-|" rhythm="01020|" enj_k="3">im Dampf der Klüfte,</l>
            <l met="-+|-+-|" rhythm="02010|" enj_k="3">durch Nebeldüfte,</l>
            <l met="+-|+-|+-|" rhythm="102|102|" enj_k="5">immer zu! Immer zu!</l>
            <l met="+-|+-|+" rhythm="00102|" enj_k="5">Ohne Rast und Ruh!</l>
          </lg>
          <lg rhyme="ababcdcd" type="stanza">
            <l met="+--+|-" rhythm="10020|" enj_k="3">Lieber durch Leiden</l>
            <l met="+--+|-" rhythm="00020|" enj_k="4">möcht' ich mich schlagen,</l>
            <l met="+--+|-" rhythm="00020|" enj_k="2_NP">als so viel Freuden</l>
            <l met="-+-|-+-|" rhythm="020010|" enj_k="5">des Lebens ertragen.</l>
            <l met="+--+|-" rhythm="10020|" enj_k="3">Alle das Neigen</l>
            <l met="-+-|-+-|" rhythm="020|020|" enj_k="3">von Herzen zu Herzen,</l>
            <l met="+--+|-" rhythm="1|0020|" enj_k="3">ach, wie so eigen</l>
            <l met="+--+|-" rhythm="10020|" enj_k="5">schaffet das Schmerzen!</l>
          </lg>
          <lg rhyme="aabbcc" type="stanza">
            <l met="+--+|-" rhythm="2|0020|" enj_k="5">Wie - soll ich fliehen?</l>
            <l met="+--+|-" rhythm="20020|" enj_k="5">Wälderwärts ziehen?</l>
            <l met="+--+|-" rhythm="10020|" enj_k="5">Alles vergebens!</l>
            <l met="+--+|-" rhythm="10020|" enj_k="3">Krone des Lebens,</l>
            <l met="+--+|" rhythm="1002|" enj_k="3">Glück ohne Ruh,</l>
            <l met="+--+|" rhythm="20|01|" enj_k="5">Liebe, bist du!</l>
          </lg>
        </lg>
      </div>
