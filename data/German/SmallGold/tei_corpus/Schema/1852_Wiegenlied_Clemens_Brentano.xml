      <div n="1">
        <lg type="poem">
          <head>Wiegenlied</head>
          <lg rhyme="abab" type="stanza">
            <l met="+-|+-|+-|+-|" rhythm="1020|20|20|" enj_k="5">Singet leise, leise, leise,</l>
            <l met="+-|+-|+-|+" rhythm="2010201|" enj_k="5">singt ein flüsternd Wiegenlied;</l>
            <l met="+-|+-|+-|+-|" rhythm="00201020" enj_k="cc_5">von dem Monde lernt die Weise,</l>
            <l met="+-|+-|+-|+" rhythm="0010201|" enj_k="5">der so still am Himmel zieht.</l>
          </lg>
          <lg rhyme="abab" type="stanza">
            <l met="+-|+-|+-|+-|" rhythm="10201020|" enj_k="3">Singt ein Lied so süß gelinde,</l>
            <l met="+-|+-|+-|+-|" rhythm="00200020|" enj_k="4">wie die Quellen auf den Kieseln,</l>
            <l met="+-|+-|+-|+-|" rhythm="00200020|" enj_k="3">wie die Bienen um die Linde</l>
            <l met="+-|+-|+-|+-|" rhythm="20|20|20|20|" enj_k="5">summen, murmeln, flüstern, rieseln.</l>
          </lg>
        </lg>
      </div>
