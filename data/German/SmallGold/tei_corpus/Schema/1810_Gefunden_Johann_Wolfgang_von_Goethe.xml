      <div n="1">
        <lg type="poem">
          <head>Gefunden</head>
          <lg rhyme="abcb" type="stanza">
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Ich ging im Walde</l>
            <l met="-+|-+|" rhythm="0002|" emo1="beauty/joy" enj_k="4">So vor mich hin,</l>
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Und nichts zu suchen,</l>
            <l met="-+|-+|" rhythm="2002|" emo1="beauty/joy" enj_k="5">Das war mein Sinn.</l>
          </lg>
          <lg rhyme="abcb" type="stanza">
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Im Schatten sah ich</l>
            <l met="-+|-+|" rhythm="0201|" emo1="beauty/joy" enj_k="3">Ein Blümlein stehn,</l>
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Wie Sterne blinkend,</l>
            <l met="-+|-+|" rhythm="0102|" emo1="beauty/joy" enj_k="5">Wie Äuglein schön.</l>
          </lg>
          <lg rhyme="abcb" type="stanza">
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="4">Ich wollt es brechen,</l>
            <l met="-+|-+|" rhythm="0102|" emo1="beauty/joy" enj_k="5">Da sagt' es fein:</l>
            <l met="-+|-+|-" rhythm="10020" emo1="beauty/joy" enj_k="3">Soll ich zum Welken</l>
            <l met="-+|-+|" rhythm="0102|" emo1="beauty/joy" enj_k="5">Gebrochen sein?</l>
          </lg>
          <lg rhyme="abcb" type="stanza">
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Mit allen Wurzeln</l>
            <l met="-+|-+|" rhythm="0002|" emo1="beauty/joy" enj_k="4">Hob ich es aus,</l>
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Und trugs zum Garten</l>
            <l met="-+|-+|" rhythm="0102|" emo1="beauty/joy" enj_k="5">Am hübschen Haus.</l>
          </lg>
          <lg rhyme="abcb" type="stanza">
            <l met="-+|-+|-" rhythm="01020|" emo1="beauty/joy" enj_k="3">Ich pflanzt es wieder</l>
            <l met="-+|-+|" rhythm="0102|" emo1="beauty/joy" enj_k="5">Am kühlen Ort;</l>
            <l met="-+|-+|-" rhythm="02020|" emo1="beauty/joy" enj_k="3">Nun zweigt und blüht es</l>
            <l met="-+|-+|" rhythm="0102|" emo1="beauty/joy" enj_k="5">Mir immer fort.</l>
          </lg>
        </lg>
